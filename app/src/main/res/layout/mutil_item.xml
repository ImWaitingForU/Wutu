<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/mad_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        app:contentPadding="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@mipmap/ic_launcher"
                android:id="@+id/ivMadpic"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/tvMadTitle"
                android:text="标题"
                style="@style/Base.TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/ivMadpic"
                android:layout_toRightOf="@id/ivMadpic"/>

            <TextView
                android:text="内容---------------------------------------------------
                -------------------------------------------------------------------
                ----------------------------------------------------------------------------------
                -------------------------------"
                android:id="@+id/tvMadContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:maxLines="4"
                android:layout_below="@id/tvMadTitle"
                android:layout_toRightOf="@id/ivMadpic"/>
            <TextView
                android:id="@+id/tvMadTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_below="@id/tvMadContent"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:text="2017.2.28"/>

        </RelativeLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>