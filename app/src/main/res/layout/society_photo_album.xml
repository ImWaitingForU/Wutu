<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cvAlbum"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    app:cardCornerRadius="18dp"
    app:cardElevation="4dp"
    app:contentPadding="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@mipmap/ic_launcher"
            android:id="@+id/ivAlbumLogo"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/tvAlbumName"
            android:text="相册名"
            style="@style/Base.TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/ivAlbumLogo"
            android:layout_toRightOf="@id/ivAlbumLogo"/>

        <TextView
            android:text="2017-1-1"
            android:id="@+id/tvAlbumTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/ivAlbumLogo"
            android:layout_toRightOf="@id/ivAlbumLogo"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>