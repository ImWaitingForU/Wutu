<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <cn.bingoogolapple.bgabanner.BGABanner
        android:id="@+id/banner_guide_content1"
        style="@style/MatchMatch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:banner_pointAutoPlayAble="true"
        app:banner_pointTopBottomMargin="5dp"
        app:banner_transitionEffect="defaultEffect"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"/>

    <cn.bingoogolapple.bgabanner.BGABanner
        android:id="@+id/banner_guide_content2"
        style="@style/MatchMatch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:banner_pointAutoPlayAble="true"
        app:banner_pointTopBottomMargin="5dp"
        app:banner_transitionEffect="depth"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"/>

    <cn.bingoogolapple.bgabanner.BGABanner
        android:id="@+id/banner_guide_content3"
        style="@style/MatchMatch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:banner_pointAutoPlayAble="true"
        app:banner_pointTopBottomMargin="5dp"
        app:banner_transitionEffect="cube"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"/>

    <cn.bingoogolapple.bgabanner.BGABanner
        android:id="@+id/banner_guide_content4"
        style="@style/MatchMatch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:banner_pointAutoPlayAble="true"
        app:banner_pointTopBottomMargin="5dp"
        app:banner_transitionEffect="alpha"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"/>

</LinearLayout>
